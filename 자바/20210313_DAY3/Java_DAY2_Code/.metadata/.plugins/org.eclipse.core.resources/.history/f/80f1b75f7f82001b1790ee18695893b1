import java.util.Scanner;
public class StudentScore {

	public static void main(String[] args) {
		int n, score;
		int sum = 0;
		double avg;
		Scanner input = new Scanner(System.in);
		
		System.out.print("총 학생의 수는 ? ");
		n = input.nextInt();
		
		for (int i = 0; i < n ; i ++) {
			System.out.printf("%d 학생의 점수는 ? ", i + 1);
			score = input.nextInt();
			sum = sum + score;
		}
		
		avg = sum / n;
		print("")
		

	}

}
