import java.util.Scanner;
public class StudentScore {

	public static void main(String[] args) {
		int n, score;
		int sum = 0;
		double avg;
		int min = Integer.MAX_VALUE;
		int max = Integer.MIN_VALUE;
		Scanner input = new Scanner(System.in);
		
		System.out.print("총 학생의 수는 ? ");
		n = input.nextInt();
		
		for (int i = 0; i < n ; i ++) {
			System.out.printf("%d 학생의 점수는 ? ", i + 1);
			score = input.nextInt();
			
			if (score < min) {
				min = score;
			}
			if (score > max) {
				max = score;
			}
			
			sum = sum + score;
		}
		
		avg = sum / n;
		System.out.println("****** 연산 결과 *******");
		System.out.println("평균은 " + avg + "입니다");
		System.out.println("최대 점수는 " + max + "입니다");
		System.out.println("최소 점수는 " + min + "입니다");

	}

}
